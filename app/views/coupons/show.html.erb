<h1> <%= @coupon.name %> </h1>

<div id="coupon-info">
  <p> Coupon Code: <%= @coupon.code %> </p>
  <% if @coupon.disc_type = 1%>
    <p>Coupon Value: <%= @coupon.amount %>% Off </p>
  <% else %>
    <p>Coupon Value: <%= @coupon.amount %> Dollars Off </p>
  <% end %>
  <p> Coupon Status: <%= @coupon.status %> </p>
  <p> Coupon Used <%= @coupon.use_count %> Times </p>
</div>

<div id="act-deact-button">
  <% if @coupon.status == ("activated") %>
    <p><%= button_to "Deactivate Coupon", "/merchants/#{@merchant.id}/coupons/#{@coupon.id}", method: :patch %></p>
  <% else %>
    <p><%= button_to "Activate Coupon", "/merchants/#{@merchant.id}/coupons/#{@coupon.id}", method: :patch %></p>
  <% end %>
</div>


