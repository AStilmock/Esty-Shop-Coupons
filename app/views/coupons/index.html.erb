<h1> <%= @merchant.name %> Coupons </h1>
<p> <%= link_to "Create New Coupon", "/merchants/#{@merchant.id}/coupons/new" %> </p>

<div id="active-coupons">
  <h3>Activated Coupons</h3>
  <% @merchant.activated_coupons.each do |coupon| %>
  <p><% if coupon.disc_type == ("percent") %></p>
    <p>Coupon Name: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %></p>
    <p>Coupon Code: <%= coupon.code %></p>
    <p>Coupon Value: <%= coupon.amount %>% Off </p>
  <p><% elsif coupon.disc_type == ("dollar") %></p>
    <p>Coupon Name: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %></p>
    <p>Coupon Code: <%= coupon.code %></p>
    <p>Coupon Value: $<%= coupon.amount %> Off </p>
    <% end %>
  <% end %>
</div>

<div id="deactive-coupons">
  <h3>Deactivated Coupons</h3>
  <% @merchant.deactivated_coupons.each do |coupon| %>
  <p><% if coupon.disc_type == ("percent") %></p>
    <p>Coupon Name: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %></p>
    <p>Coupon Code: <%= coupon.code %></p>
    <p>Coupon Value: <%= coupon.amount %>% Off </p>
  <p><% elsif coupon.disc_type == ("dollar") %></p>
    <p>Coupon Name: <%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %></p>
    <p>Coupon Code: <%= coupon.code %></p>
    <p>Coupon Value: $<%= coupon.amount %> Off </p>
    <% end %>
  <% end %>
</div>

<div id="upcoming-holidays">
  <h3>Upcoming Holidays</h3>
  <p><% @holidays.each do |holiday| %>
    <p>Holiday: <%= holiday[:name] %>-<%= holiday[:date] %></p>
  <% end %>
</div>
