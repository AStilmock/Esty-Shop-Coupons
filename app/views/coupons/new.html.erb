<h1> Create A New Coupon </h1>

<%= form_with url: "/merchants/#{@merchant.id}/coupons", method: :post, data: {turbo: false}, local: true do |f| %>
  <%= f.label  :name %>
  <%= f.text_field :name %>
  <%= f.label  :code %>
  <%= f.text_field :code %>
  <%= f.label  :amount %>
  <%= f.text_field :amount %>
  <%= f.label  :disc_type %>
  <%= f.text_field :disc_type %>
  <%= f.label  :status %>
  <%= f.text_field :status %>
  <%= f.submit "Submit" %>
<% end %>